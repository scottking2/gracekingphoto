---
// Contact form with Cloudflare Web Analytics tracking
---

<section id="contact" class="py-20 px-4 md:px-8 lg:px-16 bg-light-brown/5">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-serif text-center mb-6">Get in Touch</h2>
    <p class="text-center text-lg text-light mb-12">
      Ready to capture your precious moments? Let's connect!
    </p>

    <form id="contact-form" class="space-y-6">
      <div>
        <label for="name" class="block text-sm font-medium mb-2">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-3 border border-light-brown/30 focus:border-light-brown focus:ring-1 focus:ring-light-brown outline-none transition-colors"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium mb-2">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-3 border border-light-brown/30 focus:border-light-brown focus:ring-1 focus:ring-light-brown outline-none transition-colors"
        />
      </div>

      <div>
        <label for="phone" class="block text-sm font-medium mb-2">Phone (Optional)</label>
        <input
          type="tel"
          id="phone"
          name="phone"
          class="w-full px-4 py-3 border border-light-brown/30 focus:border-light-brown focus:ring-1 focus:ring-light-brown outline-none transition-colors"
        />
      </div>

      <div>
        <label for="message" class="block text-sm font-medium mb-2">Message</label>
        <textarea
          id="message"
          name="message"
          required
          rows="5"
          class="w-full px-4 py-3 border border-light-brown/30 focus:border-light-brown focus:ring-1 focus:ring-light-brown outline-none transition-colors resize-none"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full px-8 py-4 bg-light-brown text-white font-medium uppercase tracking-wider hover:bg-light-brown/90 transition-colors"
      >
        Send Message
      </button>

      <div id="form-message" class="hidden text-center py-4"></div>
    </form>
  </div>
</section>

<script>
  // Track form interactions for analytics
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const formMessage = document.getElementById('form-message') as HTMLDivElement;

  // Track when user focuses on form fields (indicates intent to fill out form)
  form?.addEventListener('focusin', (e) => {
    const target = e.target as HTMLElement;
    if (target.tagName === 'INPUT' || target.tagName === 'TEXTAREA') {
      // Track form field interaction
      console.log('Form field focused:', (target as HTMLInputElement).name);
      // Cloudflare Analytics event tracking will be added here
    }
  });

  // Handle form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Track form submission attempt
    console.log('Form submission started');

    const formData = new FormData(form);

    try {
      // This will be replaced with actual Cloudflare Pages Function or Formspree
      const response = await fetch('/api/contact', {
        method: 'POST',
        body: formData,
      });

      if (response.ok) {
        formMessage.textContent = 'Thank you! Your message has been sent successfully.';
        formMessage.className = 'text-center py-4 text-green-600';
        form.reset();
      } else {
        throw new Error('Submission failed');
      }
    } catch (error) {
      formMessage.textContent = 'Sorry, there was an error sending your message. Please try again or email directly.';
      formMessage.className = 'text-center py-4 text-red-600';
    }

    formMessage.classList.remove('hidden');
  });
</script>
