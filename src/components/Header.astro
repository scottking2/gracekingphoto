---
// Header component with navigation
---

<header class="fixed top-0 left-0 right-0 z-50 bg-cream/95 backdrop-blur-sm shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 md:px-8 py-6">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="text-2xl font-serif tracking-wider hover:text-light-brown transition-colors">
        Grace King Photography
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex space-x-8">
        <li><a href="#home" class="hover:text-light-brown transition-colors">Home</a></li>
        <li><a href="#portfolio" class="hover:text-light-brown transition-colors">Portfolio</a></li>
        <li><a href="#about" class="hover:text-light-brown transition-colors">About</a></li>
        <li><a href="#contact" class="hover:text-light-brown transition-colors">Contact</a></li>
      </ul>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <ul class="flex flex-col space-y-4">
        <li><a href="#home" class="block hover:text-light-brown transition-colors">Home</a></li>
        <li><a href="#portfolio" class="block hover:text-light-brown transition-colors">Portfolio</a></li>
        <li><a href="#about" class="block hover:text-light-brown transition-colors">About</a></li>
        <li><a href="#contact" class="block hover:text-light-brown transition-colors">Contact</a></li>
      </ul>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
