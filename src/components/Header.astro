---
// Header component with navigation
---

<header class="fixed top-0 left-0 right-0 z-50 bg-cream" style="height: 92px;">
  <nav class="max-w-7xl mx-auto px-8 h-full">
    <div class="flex justify-between items-center h-full" style="gap: 0.5em;">
      <!-- Left Navigation -->
      <ul class="hidden md:flex items-center" style="gap: 0.5em;">
        <li><a href="/" class="font-serif text-[15px] font-normal uppercase hover:opacity-70 transition-opacity">Home</a></li>
        <li class="w-px h-[71px] bg-black"></li>
        <li><a href="/about" class="font-serif text-[15px] font-normal uppercase hover:opacity-70 transition-opacity">About</a></li>
        <li class="w-px h-[71px] bg-black"></li>
        <li><a href="/contact" class="font-serif text-[15px] font-normal uppercase hover:opacity-70 transition-opacity">Contact</a></li>
      </ul>

      <!-- Logo Center -->
      <a href="/" class="hover:opacity-70 transition-opacity">
        <img 
          src="/images/logo/logo-main.png" 
          alt="Grace King Photography" 
          class="h-20 w-auto"
        />
      </a>

      <!-- Right Navigation (empty for balance, or add social) -->
      <div class="hidden md:block w-[200px]"></div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <ul class="flex flex-col space-y-4 font-serif text-[15px] uppercase">
        <li><a href="/" class="block hover:opacity-70 transition-opacity">Home</a></li>
        <li><a href="/about" class="block hover:opacity-70 transition-opacity">About</a></li>
        <li><a href="/contact" class="block hover:opacity-70 transition-opacity">Contact</a></li>
      </ul>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
