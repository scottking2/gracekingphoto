---
// Header with centered logo, nav items split left/right
---

<header class="fixed top-0 left-0 right-0 z-50 bg-cream" style="height: 92px;">
  <nav class="max-w-7xl mx-auto px-8 h-full flex items-center justify-between">
    <!-- Left Nav -->
    <div class="hidden md:flex items-center gap-6">
      <a href="#home" class="text-sm tracking-wide uppercase hover:opacity-70">Home</a>
      <span class="w-px h-16 bg-black"></span>
      <a href="#about" class="text-sm tracking-wide uppercase hover:opacity-70">About</a>
      <span class="w-px h-16 bg-black"></span>
      <a href="#contact" class="text-sm tracking-wide uppercase hover:opacity-70">Contact</a>
    </div>

    <!-- Centered Logo -->
    <div class="flex-1 md:flex-none flex justify-center">
      <a href="/">
        <img 
          src="/images/logo/logo-main.png" 
          alt="Grace King Photography" 
          class="h-20 w-auto"
        />
      </a>
    </div>

    <!-- Right Nav (empty for balance) -->
    <div class="hidden md:block" style="width: 280px;"></div>

    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden p-2" aria-label="Menu">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-cream border-t border-light-brown/20 px-8 py-4">
    <nav class="flex flex-col space-y-4">
      <a href="#home" class="text-sm tracking-wide uppercase hover:opacity-70">Home</a>
      <a href="#about" class="text-sm tracking-wide uppercase hover:opacity-70">About</a>
      <a href="#contact" class="text-sm tracking-wide uppercase hover:opacity-70">Contact</a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
