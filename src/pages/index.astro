---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Grace King Photography">
  <Header />
  <main>
    <Hero />

    <!-- Portfolio sections will be added here -->
    <section class="py-20 px-4 md:px-8 lg:px-16">
      <div class="max-w-7xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-serif mb-6">Welcome</h2>
        <p class="text-lg text-light max-w-2xl mx-auto">
          Portfolio content coming soon. Images and content will be added once provided by Grace.
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
