---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Gallery from '../components/Gallery.astro';
import About from '../components/About.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';

// Placeholder images - replace with actual photos from Grace
const familyImages = [
  '/images/gallery/family/placeholder1.jpg',
  '/images/gallery/family/placeholder2.jpg',
  '/images/gallery/family/placeholder3.jpg',
];

const newbornImages = [
  '/images/gallery/newborn/placeholder1.jpg',
  '/images/gallery/newborn/placeholder2.jpg',
  '/images/gallery/newborn/placeholder3.jpg',
];

const maternityImages = [
  '/images/gallery/maternity/placeholder1.jpg',
  '/images/gallery/maternity/placeholder2.jpg',
  '/images/gallery/maternity/placeholder3.jpg',
];
---

<Layout title="Grace King Photography">
  <Header />
  <main>
    <section id="home" class="scroll-mt-24">
      <Hero />
    </section>

    <!-- Welcome Section -->
    <section class="py-20 px-4 md:px-8 lg:px-16 bg-cream">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-serif uppercase mb-6">Capturing Life's Precious Moments</h2>
        <p class="text-light leading-relaxed">
          [Welcome text to be added - Introduction to Grace's photography services and approach]
        </p>
      </div>
    </section>

    <!-- Family Portfolio -->
    <Gallery title="Family" images={familyImages} category="family" />

    <!-- Maternity Portfolio -->
    <Gallery title="Maternity" images={maternityImages} category="maternity" />

    <!-- Newborn Portfolio -->
    <Gallery title="Newborn" images={newbornImages} category="newborn" />

    <!-- About Section -->
    <section id="about" class="scroll-mt-24">
      <About />
    </section>

    <!-- Details Section -->
    <section id="details" class="py-20 px-4 md:px-8 lg:px-16 bg-cream scroll-mt-24">
      <div class="max-w-4xl mx-auto">
        <h2 class="font-serif uppercase text-center mb-12">Session Details</h2>
        <div class="space-y-8">
          <div>
            <h3 class="font-serif uppercase mb-4">What to Expect</h3>
            <p class="text-light leading-relaxed">
              [Details about what clients can expect during a session - session length, location options, what to bring, etc.]
            </p>
          </div>
          <div>
            <h3 class="font-serif uppercase mb-4">Pricing & Packages</h3>
            <p class="text-light leading-relaxed">
              [Information about pricing structure and available packages]
            </p>
          </div>
          <div>
            <h3 class="font-serif uppercase mb-4">Booking Process</h3>
            <p class="text-light leading-relaxed">
              [Steps for booking a session, deposit requirements, scheduling, etc.]
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Education Section -->
    <section id="education" class="py-20 px-4 md:px-8 lg:px-16 scroll-mt-24">
      <div class="max-w-4xl mx-auto">
        <h2 class="font-serif uppercase text-center mb-12">Education & Experience</h2>
        <div class="space-y-6">
          <p class="text-light leading-relaxed text-center">
            [Information about Grace's background, training, certifications, and experience in photography]
          </p>
          <div class="grid md:grid-cols-2 gap-8 mt-12">
            <div class="text-center">
              <h3 class="font-serif uppercase mb-4">Certifications</h3>
              <p class="text-light">
                [List of professional certifications and credentials]
              </p>
            </div>
            <div class="text-center">
              <h3 class="font-serif uppercase mb-4">Specializations</h3>
              <p class="text-light">
                [Areas of expertise and special training]
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Journal Section -->
    <section id="journal" class="py-20 px-4 md:px-8 lg:px-16 bg-cream scroll-mt-24">
      <div class="max-w-6xl mx-auto">
        <h2 class="font-serif uppercase text-center mb-12">Journal</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Journal Entry 1 -->
          <article class="bg-white p-6">
            <div class="aspect-[4/3] bg-light-brown/10 mb-4"></div>
            <h3 class="font-serif uppercase mb-2">[Blog Post Title 1]</h3>
            <p class="text-light text-sm mb-4">[Date]</p>
            <p class="text-light text-sm">
              [Brief excerpt from blog post or testimonial...]
            </p>
          </article>

          <!-- Journal Entry 2 -->
          <article class="bg-white p-6">
            <div class="aspect-[4/3] bg-light-brown/10 mb-4"></div>
            <h3 class="font-serif uppercase mb-2">[Blog Post Title 2]</h3>
            <p class="text-light text-sm mb-4">[Date]</p>
            <p class="text-light text-sm">
              [Brief excerpt from blog post or testimonial...]
            </p>
          </article>

          <!-- Journal Entry 3 -->
          <article class="bg-white p-6">
            <div class="aspect-[4/3] bg-light-brown/10 mb-4"></div>
            <h3 class="font-serif uppercase mb-2">[Blog Post Title 3]</h3>
            <p class="text-light text-sm mb-4">[Date]</p>
            <p class="text-light text-sm">
              [Brief excerpt from blog post or testimonial...]
            </p>
          </article>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section id="contact" class="scroll-mt-24">
      <ContactForm />
    </section>
  </main>
  <Footer />
</Layout>
